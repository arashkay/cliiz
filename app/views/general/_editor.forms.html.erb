  <div formfor='content'>
    <h2>Change content</h2>
    <div class='clz-field'>
      <div class='clz-label'>
        <div class='clz-left'></div>
        <div class='clz-main'>Content</div>
        <div class='clz-right'></div>
      </div>
      <div class='clz-block'>
        <div class='clz-top'>
          <div class='clz-left'></div>
          <div class='clz-main'></div>
          <div class='clz-right'></div>
        </div>
        <div class='clz-middle'>
          <div class='clz-main'><textarea class='fclz-editor'></textarea></div>
        </div>
        <div class='clz-bottom'>
          <div class='clz-left'></div>
          <div class='clz-main'></div>
          <div class='clz-right'></div>
        </div>
      </div>
    </div>
