      <div class='clz-field'>
        <div class='clz-label'>
          <div class='clz-left'></div>
          <div class='clz-main'><%=t "fax"%></div>
          <div class='clz-right'></div>
        </div>
        <div class='clz-main'>
          <div class='clz-left'></div>
          <div class='clz-input'><input name='fax' value='<%= Component.default_for('locationmark')[:fax] %>'/></div>
          <div class='clz-right'></div>
