  <div formfor='infoform'>
    <h2>Form builder</h2>
    <h3>Which fields to display?</h3>
    <div class='clz-field'>
      <div class='clz-label'>
        <div class='clz-left'></div>
        <div class='clz-main'>Which fields?</div>
        <div class='clz-right'></div>
      </div>
      <div class='clz-block'>
        <div class='clz-top'>
          <div class='clz-left'></div>
          <div class='clz-main'></div>
          <div class='clz-right'></div>
        </div>
        <div class='clz-middle'>
          <div class='clz-main clz-options fn-fields'>
            <%Component.default_for('infoform')[:all_fields].each do |f|%>
              <div class='clz-option'>
                <input class='fclz-field' type='checkbox' value='<%=f%>' /><span><%=t "modules.infoform.#{f}"%></span>
              </div>
            <%end%>
          </div>
        </div>
        <div class='clz-bottom'>
          <div class='clz-left'></div>
          <div class='clz-main'></div>
          <div class='clz-right'></div>
        </div>
      </div>
    </div>
    <h3>Title for each field (optional)</h3>
    <div class='clz-inlined'>
      <%Component.default_for('infoform')[:all_fields].each do |f|%>
        <div class='clz-field fclz-field-name' style='display:none;'>
          <div class='clz-label'>
            <div class='clz-left'></div>
            <div class='clz-main'><%=t "modules.infoform.#{f}"%></div>
            <div class='clz-right'></div>
          </div>
          <div class='clz-main'>
            <div class='clz-left'></div>
            <div class='clz-input'><input name='<%=f%>' value='<%=t "#{Component.default_for('infoform')[:names][f.to_sym].to_sym}"%>'/></div>
            <div class='clz-right'></div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
